{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",        // Changed from ESNext
    "moduleResolution": "NodeNext", // Added for proper module resolution
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": false      // Added to handle the implicit 'any' error temporarily
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}